<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Derrek's Lens</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
</head>
<body class="flex flex-col min-h-screen bg-background text-text selection:bg-accent selection:text-background">

    <nav class="fixed w-full z-50 top-0 border-b border-white/10 bg-background/80 backdrop-blur-md transition-all duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex-shrink-0">
                    <a href="/" class="group flex items-center gap-2">
                        <span class="text-xl font-bold font-mono text-accent group-hover:text-white transition-colors">&lt;DL/&gt;</span>
                        <span class="font-bold tracking-tight text-white hidden sm:block">Derrek's Lens</span>
                    </a>
                </div>

                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-6">
                        <a href="/" class="nav-link @(ViewData["CurrentCategory"] == null ? "active" : "")">All</a>
                        <a href="/category/engineering" class="nav-link @(ViewData["CurrentCategory"] as string == "engineering" ? "active" : "")">Engineering</a>
                        <a href="/category/career" class="nav-link @(ViewData["CurrentCategory"] as string == "career" ? "active" : "")">The Journey</a>
                        <a href="/category/hot-takes" class="nav-link @(ViewData["CurrentCategory"] as string == "hot-takes" ? "active" : "")">Hot Takes</a>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="flex items-center gap-4 pl-6 border-l border-white/10">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="/Admin/Dashboard" class="text-xs font-mono text-accent border border-accent/50 px-2 py-1 rounded hover:bg-accent hover:text-background transition-all">DASHBOARD</a>
                                }
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                                    <button type="submit" class="text-slate-400 hover:text-white text-sm font-medium transition-colors">
                                        Logout
                                    </button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <a href="/Auth/Login" class="bg-white/10 hover:bg-white/20 text-white px-4 py-2 rounded-lg text-sm font-medium border border-white/5 transition-all backdrop-blur-sm">
                                Login
                            </a>
                        }
                    </div>
                </div>

                <div class="-mr-2 flex md:hidden">
                    <button type="button" onclick="toggleMobileMenu()" class="inline-flex items-center justify-center p-2 rounded-md text-slate-400 hover:text-white hover:bg-white/10 focus:outline-none">
                        <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <div class="md:hidden hidden bg-background border-b border-white/10" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-white/10">All Posts</a>
                <a href="/category/engineering" class="block px-3 py-2 rounded-md text-base font-medium text-slate-300 hover:text-white hover:bg-white/10">Engineering</a>
                <a href="/category/career" class="block px-3 py-2 rounded-md text-base font-medium text-slate-300 hover:text-white hover:bg-white/10">The Journey</a>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="block w-full">
                        <button type="submit" class="w-full text-left px-3 py-2 rounded-md text-base font-medium text-danger hover:bg-white/10">
                            Logout (@User.Identity.Name)
                        </button>
                    </form>
                }
                else
                {
                    <a href="/Auth/Login" class="block px-3 py-2 rounded-md text-base font-medium text-accent hover:bg-white/10">Login</a>
                }
            </div>
        </div>
    </nav>

    <main class="flex-grow w-full pt-24 px-4 sm:px-6 lg:px-8">
        @RenderBody()
    </main>

    <footer class="bg-background border-t border-white/10 mt-auto">
        <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-center md:text-left">
                    <p class="text-slate-500 text-sm">
                        &copy; @DateTime.Now.Year Derrek's Lens.
                        <span class="hidden md:inline">|</span>
                        <span class="block md:inline mt-1 md:mt-0">Built with .NET 8, Clean Arch & Tailwind.</span>
                    </p>
                </div>
                <div class="flex space-x-6">
                    <a href="#" class="text-slate-500 hover:text-accent transition-colors">GitHub</a>
                    <a href="#" class="text-slate-500 hover:text-accent transition-colors">LinkedIn</a>
                    <a href="/rss" class="text-slate-500 hover:text-accent transition-colors">RSS</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>