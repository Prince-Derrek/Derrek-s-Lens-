<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Derrek's Lens</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<body class="flex flex-col min-h-screen">

    <nav class="bg-primary border-b border-secondary sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex-shrink-0">
                    <a href="/" class="text-xl font-bold font-mono text-accent">
                        &lt;Derrek's Lens /&gt;
                    </a>
                </div>
                
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        <a href="/" class="text-gray-300 hover:text-accent px-3 py-2 rounded-md text-sm font-medium transition-colors">The Journey</a>
                        <a href="/lab" class="text-gray-300 hover:text-accent px-3 py-2 rounded-md text-sm font-medium transition-colors">The Lab</a>
                        <a href="/login" class="bg-secondary hover:bg-slate-700 text-white px-4 py-2 rounded-md text-sm font-medium border border-slate-700 transition-colors">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @RenderBody()
    </main>

    <footer class="bg-primary border-t border-secondary mt-auto">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-slate-500 text-sm">
                &copy; @DateTime.Now.Year Derrek's Lens. Handcrafted with .NET 8 & Tailwind.
            </p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>