@using DerreksLens.Core.Domain.Enums
@model DerreksLens.Application.DTOs.Posts.UpdatePostDto
@{
    ViewData["Title"] = "New Post";
}

<div class="max-w-4xl mx-auto">
    <h1 class="text-2xl font-bold text-white mb-6">Write New Post</h1>

    <form asp-action="Edit" method="post" class="space-y-6">
        <input type="hidden" asp-for="Id" />
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
                <label asp-for="Title" class="block text-sm font-medium text-slate-400 mb-1">Title</label>
                <input asp-for="Title" class="w-full bg-background border border-slate-700 rounded-lg p-2.5 text-white focus:ring-accent focus:border-accent" />
                <span asp-validation-for="Title" class="text-danger text-xs"></span>
            </div>

            <div>
                <label asp-for="CategoryId" class="block text-sm font-medium text-slate-400 mb-1">Category</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="w-full bg-background border border-slate-700 rounded-lg p-2.5 text-white focus:ring-accent focus:border-accent">
                    <option value="">Select Category...</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger text-xs"></span>
            </div>

            <div>
                <label asp-for="Status" class="block text-sm font-medium text-slate-400 mb-1">Status</label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<PostStatus>()" class="w-full bg-background border border-slate-700 rounded-lg p-2.5 text-white focus:ring-accent focus:border-accent"></select>
            </div>
        </div>

        <div>
            <label asp-for="Summary" class="block text-sm font-medium text-slate-400 mb-1">Summary (SEO)</label>
            <textarea asp-for="Summary" rows="2" class="w-full bg-background border border-slate-700 rounded-lg p-2.5 text-white focus:ring-accent focus:border-accent"></textarea>
            <span asp-validation-for="Summary" class="text-danger text-xs"></span>
        </div>

        <div>
            <label asp-for="Content" class="block text-sm font-medium text-slate-400 mb-1">Content (Markdown/HTML)</label>
            <textarea asp-for="Content" rows="15" class="w-full font-mono text-sm bg-background border border-slate-700 rounded-lg p-2.5 text-slate-300 focus:ring-accent focus:border-accent"></textarea>
            <span asp-validation-for="Content" class="text-danger text-xs"></span>
        </div>

        <div>
            <label asp-for="CoverImageUrl" class="block text-sm font-medium text-slate-400 mb-1">Cover Image URL</label>
            <input asp-for="CoverImageUrl" class="w-full bg-background border border-slate-700 rounded-lg p-2.5 text-white focus:ring-accent focus:border-accent" placeholder="https://..." />
        </div>

        <div class="flex justify-end gap-4">
            <a asp-action="Dashboard" class="px-4 py-2 border border-slate-600 rounded text-slate-300 hover:bg-secondary">Cancel</a>
            <button type="submit" class="bg-accent text-background font-bold px-6 py-2 rounded hover:bg-sky-400 transition-colors">
                Save Post
            </button>
        </div>
    </form>
</div>