@using DerreksLens.Application.DTOs.Posts
@model IEnumerable<PostListDto>

@{
    ViewData["Title"] = "Home";
}

<div class="space-y-12">
    <div class="text-center space-y-4 py-10">
        <h1 class="text-4xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-accent to-purple-500">
            Building in Public
        </h1>
        <p class="text-lg text-slate-400 max-w-2xl mx-auto">
            Documentation, experiments, and hot takes on the .NET ecosystem.
        </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        @if (!Model.Any())
        {
            <div class="col-span-full text-center py-20 bg-secondary/30 rounded-lg border border-secondary border-dashed">
                <p class="text-xl text-slate-500">No posts found.</p>
                <p class="text-sm text-slate-600 mt-2">The database is fresh.</p>
            </div>
        }
        else
        {
            @foreach (var post in Model)
            {
                <article class="bg-secondary/50 border border-slate-700/50 rounded-xl overflow-hidden hover:border-accent/50 transition-all duration-300">
                    <div class="p-6 space-y-4">
                        <h2 class="text-xl font-bold text-white hover:text-accent transition-colors">
                            @post.Title
                        </h2>
                        <p class="text-slate-400 text-sm">@post.Summary</p>
                        <div class="text-xs text-slate-500">
                            By @post.AuthorName in <span class="text-accent">@post.CategoryName</span>
                        </div>
                    </div>
                </article>
            }
        }
    </div>
</div>