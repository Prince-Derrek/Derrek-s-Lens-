@model DerreksLens.Web.ViewModels.PostDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<article class="max-w-4xl mx-auto">
    <header class="mb-8 text-center">
        <div class="text-accent text-sm font-mono mb-2">@Model.CategoryName</div>
        <h1 class="text-3xl md:text-5xl font-extrabold text-white mb-4">@Model.Title</h1>
        <div class="text-slate-400 text-sm">
            @Model.PublishedDate.ToString("MMMM dd, yyyy") &bull; By @Model.AuthorName
        </div>
    </header>

    <div class="prose prose-invert prose-lg max-w-none text-slate-300">
        @Html.Raw(Model.Content)
    </div>
</article>

<hr class="border-secondary my-12" />

<section class="max-w-3xl mx-auto" id="comments">
    <h3 class="text-2xl font-bold text-white mb-6">Discussion (@Model.Comments.Count)</h3>

    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="AddComment" method="post" class="mb-10 bg-secondary/30 p-6 rounded-xl border border-secondary">
            <input type="hidden" name="PostId" value="@Model.PostId" />
            <input type="hidden" name="PostSlug" value="@Model.Slug" />

            <label class="block text-sm font-medium text-slate-300 mb-2">Join the conversation</label>
            <textarea name="Content" rows="3" required
                  class="w-full bg-background border border-slate-700 rounded-lg p-3 text-white focus:ring-accent focus:border-accent transition-colors"
                  placeholder="Share your thoughts..."></textarea>

            <div class="mt-4 flex justify-end">
                <button type="submit" class="bg-accent text-background font-bold px-4 py-2 rounded-lg hover:bg-sky-400 transition-colors">
                    Post Comment
                </button>
            </div>
        </form>
    }
    else
    {
        <div class="mb-10 p-6 bg-secondary/20 rounded-xl border border-secondary text-center">
            <p class="text-slate-400">Please <a href="/Auth/Login?returnUrl=/post/@Model.Slug" class="text-accent hover:underline">log in</a> to leave a comment.</p>
        </div>
    }

    <div class="space-y-6">
        @foreach (var comment in Model.Comments)
        {
            <partial name="_CommentPartial" model="comment" />
        }
    </div>
</section>